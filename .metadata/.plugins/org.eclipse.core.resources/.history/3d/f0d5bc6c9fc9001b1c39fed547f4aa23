package upeu.sisecad.grupo5.app.legajo.dao;

import java.util.Optional;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;
import org.springframework.data.repository.query.Param;

import reactor.core.publisher.Flux;
import upeu.sisecad.grupo5.app.legajo.entity.Legajo;

public interface LegajoDao extends CrudRepository<Legajo, Integer> {

	@Query(value ="select l from Legajo l where l.co_docente = '123456789'", nativeQuery = true)
	Optional<Legajo> findByCodDocente2(String co_docente);
	
	@Query("SELECT l FROM Legajo WHERE l.co_docente = :#{[0]}")
	Flux<Legajo> findByCodDocente(String co_docente);
	
}
